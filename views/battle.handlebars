<div class="row">
  <div class="column">
    <div id="my-character-stats-container">
      <h1><span style="color: #07732D;">My Character</span></h1>
      <h3>Character Name! <span class="span">{{character1.name}}</span></h3>
      <h3>Attack! <span class="span" id="stat-1">{{character1.atk}}</span> </h3>
      <h3>Magical Attack! <span class="span" id="stat-2">{{character1.magAtk}}</span></h3>
      <h3>Defense! <span class="span" id="stat-3">{{character1.def}}</span></h3>
      <h3>Magical Defense! <span class="span" id="stat-4">{{character1.magDef}}</span></h3>
    </div>
  </div>
  <div class="column">
    <div id="battle-container">
      <h1>Battle</h1>
      <div id="mb-health-container">
        <div id="message-board">
          <h2 id="message-board-header">
            Message Board
          </h2>
          <ul id="messages"></ul>
          <form action="">
            <input id="send" autocomplete="off" /><button>Send</button>
          </form>
        </div>
        <div id="health">
          <h2><span style="color: #07732D;">My Health:</span><br><span class="span">{{character1.hp}}</span>
          </h2>
          <h2><span style="color: #FF0000;">Foe's Health:</span><br><span class="span">{{character2.hp}}</span>
          </h2>
        </div>
      </div>
      <br>
      <button id="physical-button" class="attack" data-type="physAtk">Physical Attack</button>
      <button id="magical-button" class="attack" data-type="magAtk">Magical Attack</button>
    </div>
  </div>
  <div class="column">
    <div id="foe-character-stats-container">
      <h1><span style="color: #FF0000;">My Foe</span></h1>
      <h3>Character Name! <span class="span">{{character2.name}}</span></h3>
      <h3>Attack! <span class="span" id="stat-1">{{character2.atk}}</span> </h3>
      <h3>Magical Attack! <span class="span" id="stat-2">{{character2.magAtk}}</span></h3>
      <h3>Defense! <span class="span" id="stat-3">{{character2.def}}</span></h3>
      <h3>Magical Defense! <span class="span" id="stat-4">{{character2.magDef}}</span></h3>
    </div>

    <br>


  </div>


  <div id="game-over-modal">
    <div id="modal-content">
      <span id="close">&times;</span>
